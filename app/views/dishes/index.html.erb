<h1>Foodland</h1>
<h2>Eat the most delicious food at Foodland!</h2>
<h3>Menu</h3>
<h4>Breakfast</h4>
<table>
  <tbody>
    <% @dishes.each do |dish| %>
    <% if dish.course_id == 1 %>
      <tr>
        <td><%= dish.name %></td>
        <td><%= dish.price %></td>
        <td><%= dish.description %>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<h4>Lunch</h4>
<table>
  <tbody>
    <% @dishes.each do |dish| %>
    <% if dish.course_id == 2 %>
      <tr>
        <td><%= dish.name %></td>
